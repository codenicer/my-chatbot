{
  "name": "@my-chatbot/app",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo run dev --filter=web",
    "lint": "turbo run lint",
    "check-types": "turbo check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "publish-package" : "turbo run build && changeset version && changeset publish"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.4.0"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.12"
  }
}
