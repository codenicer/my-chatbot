{
  "extends": "../typescript-config/base.json",
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2020",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, // VERY IMPORTANT!
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
} 